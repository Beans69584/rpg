    - {static} <<extern>> SetConsoleMode(hConsoleHandle:IntPtr, dwMode:uint) : bool
    - {static} <<extern>> GetConsoleMode(hConsoleHandle:IntPtr, lpMode:uint) : bool
    - {static} <<extern>> GetStdHandle(nStdHandle:int) : IntPtr
